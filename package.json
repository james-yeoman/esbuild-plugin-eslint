{
  "name": "esbuild-plugin-eslint",
  "version": "0.3.7",
  "description": "Lint your esbuild bundles with ESLint. üßê",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/robinloeffel/esbuild-plugin-eslint.git",
  "homepage": "https://github.com/robinloeffel/esbuild-plugin-eslint",
  "bugs": "https://github.com/robinloeffel/esbuild-plugin-eslint/issues",
  "author": "Robin L√∂ffel (https://robinloeffel.ch) <hi@robinloeffel.ch>",
  "license": "MIT",
  "keywords": [
    "esbuild",
    "plugin",
    "esbuild-plugin",
    "eslint",
    "lint"
  ],
  "files": [
    "source",
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/eslint": "^8.44.6",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "esbuild": ">=0.17.19",
    "eslint": "^8.52.0",
    "eslint-config-sweet": "^12.0.0",
    "husky": "^8.0.3"
  },
  "peerDependencies": {
    "esbuild": ">=0.17.19",
    "eslint": "^8.37.0"
  },
  "scripts": {
    "start": "bun run build && bun run watch",
    "build": "rm -rf dist && tsc",
    "watch": "concurrently 'bun run watch:source' 'bun run watch:test'",
    "watch:source": "chokidar 'source/**/*' -c 'bun run build'",
    "watch:test": "chokidar 'test/**/*' -c 'bun test/esbuild.js'",
    "prepublishOnly": "bun run build",
    "prepare": "husky install"
  }
}
